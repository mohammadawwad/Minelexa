{
  "type": "APL",
  "version": "1.7",
  "description": "This APL document places text on the screen and includes a button that sends the skill a message when selected. The button is a pre-defined responsive component from the alexa-layouts package.",
  "import": [
    {
      "name": "alexa-layouts",
      "version": "1.4.0"
    }
  ],
  "mainTemplate": {
    "parameters": [
      "payload"
    ],
    "items": [
      {
        "type": "Container",
        "height": "100vh",
        "width": "100vw",
        "items": [
          {
            "type": "AlexaBackground",
            "backgroundImageSource": "https://d2o906d8ln7ui1.cloudfront.net/images/MollyforBT7.png",
            "colorOverlay": true
          },
          {
            "type": "AlexaHeader",
            "headerTitle": "Crafting Guide For:",
            "headerSubtitle": "swords",
            "headerDivider": true
          },
          {
            "type": "Text",
            "id": "helloTextComponent",
            "height": "30%",
            "width": "55%",
            "text": "To craft that you will need the following Ingredients: Stick + Wood Planks or Cobblestone or Iron Ingots or Gold Ingots or Diamonds",
            "textAlign": "left",
            "textAlignVertical": "left",
            "paddingLeft": "@spacingXLarge",
            "paddingRight": "@spacingSmall",
            "paddingTop": "@spacingLarge",
            "style": "textStyleBody",
            "fontSize": "@fontSizeSmall"
          },
          {
            "type": "Text",
            "id": "helloTextComponent",
            "height": "20%",
            "width": "60%",
            "text": "Item description: Melee weapon used to damage mobs, other player or to block attacks.",
            "textAlign": "left",
            "textAlignVertical": "left",
            "paddingLeft": "@spacingXLarge",
            "paddingRight": "@spacingSmall",
            "paddingTop": "@spacingXLarge",
            "style": "textStyleBody",
            "fontSize": "@fontSizeXSmall"
          },
          {
            "type": "AlexaImage",
            "imageSource": "https://www.minecraftcraftingguide.net/img/crafting/swords-crafting.gif",
            "imageRoundedCorner": true,
            "imageScale": "best-fit",
            "imageAlignment": "center",
            "imageHeight": "50vh",
            "imageAspectRatio": "square",
            "top": "-35%",
            "left": "65%"
          }
        ]
      }
    ]
  }
}